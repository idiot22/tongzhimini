@import "../../wxSearchView/wxSearchView.wxss";
.container{
  padding: 0px
}
.log-list {
  display: flex;
  flex-direction: column;
  /* padding-bottom:60rpx; */
}
.log-item {
  margin: 5rpx;
  margin-left:15rpx 
}
.title {
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 40rpx;
  font-size: 17px;
  color: rgb(88, 88, 88);
  background: rgb(250, 250, 250);
}
.title:first-child {
  margin-top:0;
}
.list-group-item {
  display: flex;
  -webkit-box-align: center;
  align-items: center;
  padding: 10rpx 0 0 10rpx;
  border-bottom: 0.005px solid rgb(231, 231, 231);
  background: white
}
.list-group-item:last-child {
  padding-bottom: 10rpx;

}
.list-group-item .icon {
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.list-shortcut {
  position: fixed;
  z-index: 30;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  width: 20px;
  padding: 20px 0;
  border-radius: 10px;
  text-align: center;
  font-family: Helvetica;
}
.list-shortcut text {
  display: block;
  padding: 3px;
  line-height: 1;
  color: rgb(86, 167, 129);
  font-size: 13px;
}
.current{
  color: #ffcd32 ;
}
.list-fixed {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.fixed-title {
  height:60rpx;
  line-height:60rpx;
  padding-left:40rpx;
  font-size:12px;
  color:rgb(83, 207, 155);
}