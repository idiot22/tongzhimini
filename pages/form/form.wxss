.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}
.modalDlg{
    width: 300rpx;
    height: 130px;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    /* margin: -150rpx 85rpx; */
    margin-left: 30%;
    margin-top: -30%;
    /* margin-top: 20%; */

    background-color: white;
    border-radius: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.modalDlg image
{
    margin:block;
    width:2rem;
    height: 2rem;
    margin:auto;
}
