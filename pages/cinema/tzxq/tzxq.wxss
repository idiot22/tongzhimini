/* pages/cinema/tzxq/tzxq.wxss */
header{
    font-size:1em
}
#xq-img{
    width: 100%;
    height: 9em;
    background-size:100% 10em
}
#xq-img image{
  width: 100%;
  height: 9em;
}
#title{
    font-size:1.3em;
    color:black;
    padding: 0.5em 1em
}
.touxiang{
    width:1.5em;
    height:1.5em;
    background-size:100% 1.5em;
    border-radius: 1em ;
    display: inline-block;
    float: left;
    margin-right:0.2em 
}
.touxiang image{
    width:1.5em;
    height:1.5em;
}
#xqicon span{
 font-size: 0.7em;
 color: rgb(124, 124, 124);
 float: left;
}
#xqicon{
    padding: 0em 1.2em;
    position: relative;
}
#icon-kuai{
    float: left;
    line-height: 1.5em;
    margin-right:1em ;
    font-size:0.9em;
}
#time{
    width:1.1em;
    height:1.1em;
    background-size:100% 1.4em;
    margin-top:0.2em 
}
#time image{
    width:1.1em;
    height:1.1em;
}
#see{
    margin-top:0.2em ;
    width:1.1em;
    height:1em;
    border-radius: 0em;
    background-size:100% 1.5em;
}
#see image{
    width:100%;
    height:1em;
}
#wenzhang{
    padding: 1em 1em;
    text-indent:2em;
    font-size:0.9em;
    color: rgb(145, 145, 145)
}
#wenzhang view{
  padding: 0px 1.1em
}
.btn{
    width: 30%;
    height: 2em;
    background: rgb(123, 198, 162);
    border-radius: 1em;
    color: aliceblue;
    text-align: center;
    line-height: 2em;
    box-shadow: 0px 0px 10px 0px #b3b3b3;
    margin-left: 50%;
    transform: translateX(-50%);
    margin-bottom:1em 
}
a{
    text-decoration: none
}
/*返回*/
.back{
    position: absolute;
    width:1.5em;
    height: 1.5em;
    left:0.4em;
    margin-top:0.25em 
  }
  .back img{
      width: 100%
  }
  .share{
    position: absolute;
    width:1.2em;
    height: 1.2em;
    right:0.4em;
    margin-top:0.25em 
  }
  .share img{
      width: 100%
  }