a{
    text-decoration: none;
    color:  #727172
}

a:hover{
    text-decoration: none;
    color:  #727172
}

#body{
    background-color: white;
    font-family: "Helvetica Neue",'Microsoft Yi Baiti' ,'Open Sans', 'Helvetica Neue', Arial, 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
    box-sizing:border-box;
    -moz-box-sizing:border-box; /* Firefox */
    -webkit-box-sizing:border-box; /* Safari */
    width:100%;
}
#kuai{
  overflow: hidden;
   position: absolute;

}
#gn-wrap{
    margin-top: 2em 
}
.gn-kuai{
    float: left;
    width: 30%;
    padding: 6%;
    border-radius:0.5em;
    background:  #f5f5f5;
    margin-bottom: 1.5em ;
    transition: all 0.2s ease;
    margin-left:2%;
    margin-right:6% ;
}
.clear::after{
    clear: both;
}
 .gn-kuai:nth-of-type(odd){
     margin-left:6%;
    margin-right:2% ;
} 
.gn-kuai:focus,
.gn-kuai:hover{
  transform: scale(0.9,0.9)
}
.gn-kuai image{
    top:0px;
    width: 28%;
    height: 2.2em;
}
.gn-kuai{
    font-size:0.8em;
    color: #727172;
}
.gn-kuai view{
    margin-top:0.5em; 
    text-align: center;
}